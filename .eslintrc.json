{
  "extends": [
    "eslint-config-kimbiyam-react/prettier",
    "eslint-config-kimbiyam-react/typescript",
    "next"
  ],
  "settings": {
    "next": {
      "rootDir": "src"
    }
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "caughtErrors": "none"
      }
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          ["sibling", "parent", "index"],
          "type",
          "unknown"
        ],
        "pathGroups": [
          {
            "pattern": "{react*,react*/**}",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "next*/**",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "@src*/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "*.css",
            "group": "unknown",
            "patternOptions": { "matchBase": true },
            "position": "after"
          }
        ],
        "pathGroupsExcludedImportTypes": [],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "newlines-between": "always",
        "warnOnUnassignedImports": true
      }
    ]
  }
}
